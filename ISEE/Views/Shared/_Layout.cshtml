<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" media="screen" />
    <link href="http://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.3.0/css/datepicker.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/bootstrap-select.css" rel="stylesheet" media="screen" />
    <link href="~/Content/css/bootstrap-responsive-tabs.css" rel="stylesheet" media="screen" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <link href="~/Content/css/main.css" rel="stylesheet" media="screen" />
    <link href="~/Content/css/responsive.css" rel="stylesheet" media="screen" />



    @RenderSection("customcss", required: false)
</head>
<body>
    @*Header Section*@
    <div class="container menu_bar navbar navbar-default">

        <div class="col-md-8 col-sm-10 col-xs-12">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

            </div>
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">

                    <li class="dropdown">
                        <a href="/employee/employee" class="dropdown-toggle" role="button" aria-haspopup="true" aria-expanded="false">
                            <div class="round_nav"><img src="~/images/employee_2new.png" class="img-rounded" /></div>
                            <p class="nav_title">Employee</p>


                        </a>
                    </li>

                    <li class="dropdown">
                        <a href="/Customer/Customer" class="dropdown-toggle" role="button" aria-haspopup="true" aria-expanded="false">
                            <div class="round_nav"> <img src="~/images/folder.png" class="img-rounded" /></div>
                            <p class="nav_title">Customer</p>
                        </a>

                    </li>


                    <li class="dropdown">
                        <a href="/Map/Map" class="dropdown-toggle" role="button" aria-haspopup="true" aria-expanded="false">
                            <div class="round_nav"><img src="~/images/world.png" class="img-rounded" /></div>
                            <p class="nav_title">Map</p>
                        </a>


                    </li>



                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <div class="round_nav"><img src="~/images/report.png" class="img-rounded" /></div>
                            <p class="nav_title">Reports</p>
                        </a>


                    </li>


                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <div class="round_nav"><img src="~/images/question.png" class="img-rounded" /></div>
                            <p class="nav_title">About</p>
                        </a>

                    </li>



                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <div class="round_nav"><img src="~/images/Home.png" class="img-rounded" /></div>
                            <p class="nav_title">About</p>
                        </a>

                    </li>

                </ul>



            </div><!-- /.navbar-collapse -->

        </div>

        <div class="col-md-4 col-sm-2 col-xs-12 right_menu_isee">
            <div class="isee_logo">
                <img src="../images/region_see.png" />
            </div>

            <div class="login_control_icon">

                <div class="isee_settin_tool"><a href="/Admin/Admin"><img src="../images/settings_icon.png" /></a></div>
                <div class="isee_logout_tool"><a href="/Login/Login"><img src="../images/logout.png" /></a></div>





            </div>
        </div>

    </div>
    @*Content Section*@
    <div id="content" class="container main_content">@RenderBody()</div>
    @*Content Section End*@




    @*footer Section*@
    <div class="container isee_footer" id="navigation3">
        <div class="col-md-2 col-xs-12"></div>
        <div class="col-md-8 col-xs-12">
            <div class="isee_copyright">
                <div class="isee_footer_image">
                    <img src="~/images/footer_logo.png" />
                    copyright &copy; @DateTime.Now.Year
                </div>
            </div>
        </div>

        <div class="col-md-2 col-xs-12"></div>
    </div>





    @*@Scripts.Render("~/bundles/jquery")*@
    @*<script src="~/Scripts/js/jquery.min.js"></script>*@
    <script src="http://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.3.0/js/bootstrap-datepicker.js"></script>
    <script src="~/Scripts/js/bootstrap-select.js"></script>
    <script src="~/Scripts/js/bootstrap.min.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>

